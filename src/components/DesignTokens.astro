---
import "@acab/reset.css";
import "@fontsource-variable/lexend";
import "@fontsource/poppins";
---

<style is:global>
  :root {
    --color-background: #fffefc;
    --color-background-card: #38313e;
    --color-text: #28232c;
    --color-accent-a: #26417b;
    --color-accent-b: #ffb155;
    --color-category-a: #26417b;
    --color-category-b: #177b51;
    --color-category-c: #28232c;
    --color-category-d: #fd5d36;
    --color-borders: #a9a9a9;

    --font-main: "Lexend", sans-serif;
    --font-headline: "Poppins", sans-serif;
    --size-page-width: 1200px;
    --size-content-width: 960px;
    --size-padded-content: min(var(--size-content-width), calc(100vw - 2rem));
    --size-page-padding: 1rem;
    --font-size-navitems: 0.8rem;

    font-family: var(--font-main);
    font-weight: 300;
    color: var(--color-text);
    background-color: var(--color-background);

    font-size: 16px;
  }
  html {
  }
</style>
<style is:global>
  .ec-button {
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    background-color: var(--color-button-bg);
    border: 2px solid var(--color-button-bg);
    color: var(--color-button-text);
    text-decoration: none;
    display: inline-block;
  }
  .ec-button:hover,
  .ec-button:focus {
    background-color: var(--color-button-text);
    color: var(--color-button-bg);
  }
  .ec-button-primary {
    --color-button-bg: var(--color-accent-a);
    --color-button-text: var(--color-background);
  }
  .ec-button-secondary {
    --color-button-bg: var(--color-accent-b);
    --color-button-text: var(--color-text);
  }
</style>

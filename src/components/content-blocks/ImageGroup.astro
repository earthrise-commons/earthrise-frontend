---
import { Image } from "astro:assets";
const { src, alt, caption } = Astro.props;
---

<figure>
  <Image inferSize={true} class="ec-image" src={src} alt={alt} />
  <figcaption>{caption}</figcaption>
</figure>

<style>
  figure {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .ec-image {
    border-radius: 0.5rem;
  }
  figcaption {
    font-size: 1rem;
    font-style: italic;
  }
</style>

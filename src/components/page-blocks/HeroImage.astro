---
const { data, uuid } = Astro.props;
import { Image } from "astro:assets";
import PagePlaceholder from "../placeholders/PagePlaceholder.astro";
---

{
  data?.url && (
    <Image
      src={data.url}
      alt={data.alt || ""}
      width={data.width}
      height={data.height}
      class="hero-image"
    />
  )
}
{!data?.url && <PagePlaceholder class="hero-image" uuid={uuid} />}

<style>
  .hero-image,
  .hero-placeholder {
    aspect-ratio: 5/2;
    border-radius: 0.5rem;
    object-fit: cover;
    object-position: center right;
    margin: 0.5rem 0;
  }
</style>

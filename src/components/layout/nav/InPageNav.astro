---
/* TODO: decide if the href for these should be a real URL or just the anchor part, and if it should include the pound sign */
const { items, class: className, width = "content" } = Astro.props;
const navItems = items || [
  { label: "Explore", href: "#explore" },
  { label: "About", href: "#about" },
  { label: "Code of Conduct", href: "#conduct" },
  { label: "Call for Submissions", href: "#submissions" },
  { label: "Table of Contents", href: "#toc" },
];
---

<nav class={className}>
  <div class:list={["nav-group-main", "nav-width-" + width]}>
    {
      navItems.map((item) => (
        <a href={item.href} class="nav-item">
          {item.label}
        </a>
      ))
    }
  </div>
</nav>

<style>
  nav {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem var(--size-page-padding);
    background-color: var(--color-text);
    color: var(--color-background);
    font-weight: 500;
    width: 100%;
    max-width: 100vw;
    position: sticky;
    top: 0;
  }
  .nav-width-page {
    max-width: calc(var(--size-padded-page) + 2rem);
  }
  .nav-width-content {
    max-width: calc(var(--size-padded-content) + 2rem);
  }

  .nav-group-main {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    /* TODO: fix the width of this on smaller screens */
    width: 100%;
  }
  .nav-item {
    padding: 1rem 1.5rem;
    text-decoration: none;
    font-size: 1rem;
  }
  .nav-item:first-child {
    /* padding-left: 0; */
  }
  .nav-item:hover,
  .nav-item:focus {
    background-color: var(--color-background);
    color: var(--color-text);
  }
</style>

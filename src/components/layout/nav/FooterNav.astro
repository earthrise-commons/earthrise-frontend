---
import EcLogo from "../../../assets/ec-logo-plain.svg";
const navItems = [
  { label: "Explore", href: "/explore" },
  { label: "About", href: "/about" },
  { label: "Code of Conduct", href: "/code-of-conduct" },
  { label: "Call for Submissions", href: "/submissions" },
  { label: "Table of Contents", href: "" },
];

// split navItems into two roughly equal-sized subgroups
const midIndex = Math.ceil(navItems.length / 2);
const firstGroup = navItems.slice(0, midIndex);
const secondGroup = navItems.slice(midIndex);
---

<nav>
  <div class="nav-container">
    <div class="nav-group-logo">
      <a href="/"><EcLogo /></a>
    </div>
    <div class="nav-group-main">
      <div class="nav-subgroup">
        {
          firstGroup.map((item) => (
            <a
              data-astro-prefetch
              href={item.href}
              class:list={["nav-item", item.href === "" && "nav-item-inactive"]}
            >
              {item.label}
            </a>
          ))
        }
      </div>
      <div class="nav-subgroup">
        {
          secondGroup.map((item) => (
            <a
              data-astro-prefetch
              href={item.href}
              class:list={["nav-item", item.href === "" && "nav-item-inactive"]}
            >
              {item.label}
            </a>
          ))
        }
        <a href="/submissions" class="ec-button"> Contribute a Project </a>
      </div>
    </div>
  </div>
</nav>
<style>
  nav {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 var(--size-page-padding);
  }
  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--size-page-width);
    padding: 1rem 0;
    width: 100%;
    gap: 2rem;

    font-size: var(--font-size-navitems);
  }
  .nav-group-main {
    display: flex;
    flex-wrap: wrap;
  }
  .nav-item {
    padding: 1rem 1.5rem;
    text-decoration: none;
    font-weight: 400;
    border-radius: 0.5rem;
    margin: 0.25rem 0;
  }
  .ec-button {
    margin: 0.25rem 0;
  }
  .nav-item:hover,
  .nav-item:focus-visible {
    background-color: var(--color-text);
    color: var(--color-background);
  }
  .nav-item-inactive {
    opacity: 0.25;
    pointer-events: none;
  }
  .nav-subgroup {
    display: contents;
  }

  .nav-group-logo {
    flex-shrink: 0;
  }
  @media (min-width: 600px) {
    .nav-subgroup {
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      align-items: center;
    }
  }
</style>

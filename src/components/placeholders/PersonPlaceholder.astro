const colorBank = {
  dkBlue: "#26417B",
  ltBlue: "#81C1FF",
  dkGreen: "#177B51",
  ltGreen: "#5FE5AD",
  pink: "#E6B2E4",
  yellow: "#F2FF63",
  orange: "#FFB155",
  red: "#FD5D36",
  black: "#28232C",
  white: "#FFFEFC",

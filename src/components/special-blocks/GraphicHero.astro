---
const { title } = Astro.props;

import TOCHero from "../../assets/graphic-hero/toc-hero.svg";
const imgsrc = TOCHero.src;
---

<div class="graphic-hero-frame" style={`background-image: url(${imgsrc});`}>
  <h1>{title}</h1>
</div>

<style>
  .graphic-hero-frame {
    max-width: var(--size-page-width);
    background-size: cover;
    background-position: center;
    height: 350px;
    border-radius: 0.5rem;
    overflow: hidden;
    position: relative;
    margin-bottom: 10rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  h1 {
    font-family: var(--font-headline);
    z-index: 10;

    font-size: 4rem;
    margin-bottom: 1rem;
    width: min-content;
    padding: 1rem;
    text-align: center;
    color: var(--color-background);
    background-color: var(--color-text);
  }
</style>
